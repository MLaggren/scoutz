.row-fluid
  .span12
    .page-header
      .pull-right
        = link_to(new_unit_email_message_path(@unit), class: "btn btn-success") do
          %i.icon-plus
          new message

      %h2 My Sent Messages
      %blockquote
        %h3= @unit.name_unit

.row-fluid
  .span12
    %table.table
      %thead
        %th From
        %th Recipients
        %th Subject
        %th Sent at

      - @email_messages.each do |email_message|
        %tr
          %td= email_message.sender.email
          %td= email_message.send_to
          %td= email_message.subject
          %td
            - if email_message.sent_at
              = email_message.sent_at.to_s(:short_ampm)
            - else
              %em pending
