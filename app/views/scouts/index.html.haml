.row-fluid
  .span12
    .page-header
      .pull-right
        = link_to(new_organization_scout_path(@organization), class: "btn btn-success") do
          %i.icon-plus
          new scout

      %h2 Scouts in #{@organization.name}


.row-fluid
  .span9
    %table.table
      %tr
        %th Name
        %th= @organization.sub_unit_name
        %th Rank
        %th Age
        %th Adults

      - @users.each do |scout|
        %tr
          %td= link_to scout.name_lf, organization_scout_path(@organization, scout)
          %td= scout.sub_unit.try(:name)
          %td= scout.rank
          %td= scout.age
          %td= organization_adults_link_list(@organization, scout.adults)

          / %td
          = #link_to 'Show', organization_scout_path(@organization, scout), class: 'btn btn-mini'
          = #link_to 'Edit', edit_organization_scout_path(@organization, scout), class: 'btn btn-mini'
          = #link_to 'Destroy', organization_scout_path(@organization, scout), confirm: 'Are you sure?', method: :delete, class: 'btn btn-danger btn-mini'

  .span3
    .well.well-boys
      %strong Rank Count
      %ul.unstyled
        - @organization.ranks.each do |rank|
          %li= "#{rank} : #{@organization.scout_rank_count[rank]}"

      %strong #{@organization.sub_unit_name} Count
      %ul.unstyled
        - @organization.scout_sub_unit_count.each do |sub_unit|
          %li= "#{sub_unit[0] || '<none>'} : #{sub_unit[1]}"
