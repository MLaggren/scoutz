= form_for @event, :html => { :class => 'form-horizontal' } do |f|
  = render partial: 'layouts/flash', locals: {flash: flash, ar_object: @event}

  %fieldset
    %legend Info
    .control-group
      = f.label :kind, class: 'control-label'
      .controls
        = f.select :kind, @organization.event_kinds

    .control-group
      = f.label :name, class: 'control-label'
      .controls
        = f.text_field :name, class: 'span8'

  %fieldset
    %legend Notifications
    .control-group
      = f.label :send_reminders, class: 'control-label'
      .controls
        = f.check_box :send_reminders

    .control-group
      = f.label :notifier_type, class: 'control-label'
      .controls
        = f.text_field :notifier_type

  %fieldset
    %legend Date and Time
    .control-group
      = f.label :start_at, 'Starts', class: 'control-label'
      .controls
        = f.text_field :start_at, class: 'datetime-picker', value: @event.start_at.to_formatted_s(:datetimepicker)

    .control-group
      = f.label :end_at, 'Ends', class: 'control-label'
      .controls
        = f.text_field :end_at, class: 'datetime-picker', value: @event.end_at.to_formatted_s(:datetimepicker)

  %fieldset
    %legend What to Wear
    .control-group
      = f.label :attire, class: 'control-label'
      .controls
        = f.select :attire, ['Field Uniform (Class A)', 'Activity Uniform (Class B)', 'Field or Activity Uniform', 'No Uniform, Comfortable Clothing'], {}, class: 'span6'

  %fieldset
    %legend RSVP
    .control-group
      = f.label :signup_required, class: 'control-label'
      .controls
        = f.check_box :signup_required

    .control-group
      = f.label :signup_deadline, class: 'control-label'
      .controls
        = f.text_field :signup_deadline, class: 'datetime-picker', value: @event.signup_deadline.to_formatted_s(:datetimepicker)

  %fieldset
    %legend Location
    .control-group
      = f.label :location_name, 'Name', class: 'control-label'
      .controls
        = f.text_field :location_name

    .control-group
      = f.label :location_address1, 'Address 1', class: 'control-label'
      .controls
        = f.text_field :location_address1

    .control-group
      = f.label :location_address2, 'Address 2', class: 'control-label'
      .controls
        = f.text_field :location_address2

    .control-group
      = f.label :location_city, 'City, State, Zip', class: 'control-label'
      .controls
        = f.text_field :location_city, class: 'span3', placeholder: 'city'
        = f.text_field :location_state, class: 'span3', placeholder: 'state'
        = f.text_field :location_zip_code, class: 'span2', placeholder: 'zip code'

    .control-group
      = f.label :location_map_url, 'Map Link', class: 'control-label'
      .controls
        = f.text_field :location_map_url, class: 'span10', placeholder: 'http://maps.google.com'

  .actions
    = f.submit 'Save'
