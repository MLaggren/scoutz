    = f.number_field :organization_id
  .field
    = f.label :kind
    = f.text_field :kind
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :send_reminders
    = f.check_box :send_reminders
  .field
    = f.label :notifier_type
    = f.text_field :notifier_type
  .field
    = f.label :start
    = f.datetime_select :start
  .field
    = f.label :end
    = f.datetime_select :end
  .field
    = f.label :signup_required
    = f.check_box :signup_required
  .field
    = f.label :signup_deadline
    = f.datetime_select :signup_deadline
  .field
    = f.label :location_name
    = f.text_field :location_name
  .field
    = f.label :location_address1
    = f.text_field :location_address1
  .field
    = f.label :location_address2
    = f.text_field :location_address2
  .field
    = f.label :location_city
    = f.text_field :location_city
  .field
    = f.label :location_state
    = f.text_field :location_state
  .field
    = f.label :location_zip_code
    = f.text_field :location_zip_code
  .field
    = f.label :location_map_url
